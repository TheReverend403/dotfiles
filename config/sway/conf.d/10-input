# vi: ft=swayconfig

# Apply system-wide XKB configuration stored in systemd-localed.
# https://github.com/alebastr/sway-systemd
exec_always "$XDG_CONFIG_HOME"/sway/bin/locale1-xkb-config --oneshot

input "type:keyboard" {
    xkb_numlock enabled
}

input "type:pointer" {
    accel_profile adaptive
    pointer_accel 0.3
}

input "type:touchpad" {
    dwt enabled
    tap enabled
    middle_emulation enabled
    accel_profile adaptive
    pointer_accel 0.5
}

