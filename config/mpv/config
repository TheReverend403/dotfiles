## Video ##
vo=opengl
hwdec=auto
framedrop=vo
deinterlace=yes
video-sync=display-resample

## Audio ##
ao=alsa
audio-channels=2
af=drc

## UI
term-osd-bar-chars=[=>.]
audio-display=no
stop-screensaver=yes

## Other ##
geometry=50%:50%
autofit-larger=50%x80%
no-border
no-resume-playback
no-ordered-chapters

ytdl-format=bestvideo[height<=?1080]+bestaudio/best

# Languages
alang=jpn,jp,eng,en,
slang=jpn,jp,eng,en,

# Do not terminate when playing or seeking beyond the end of the file
keep-open

# Disable subs on load
no-sub

# Cache
cache=20000

# Window title
title="${filename}"

[extension.webm]
loop-file=yes

[web]
loop-file=yes

# I don't want to wait ages for the window to finally show up before I can move my focus around again
[protocol.http]
force-window=immediate

[protocol.https]
profile=protocol.http

[protocol.ytdl]
profile=protocol.http

# vim: syntax=config
